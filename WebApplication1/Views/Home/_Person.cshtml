@model Person

<div class="row" id="person_@Model.Id">
    @*<div class="col">@Model.Id</div>*@
    <div class="col">@Model.Name</div>
    <div class="col">@Model.Number</div>
    <div class="col">@Model.City</div>
    <div class="col">
        <button class="btn btn-danger mx-2" onclick="AjaxPost(
                'person_@Model.Id',
                '@Url.Action("Delete", "Home", new { id = Model.Id })')">
            Delete
        </button>
        <button onclick="AjaxGet(
                'person_@Model.Id', 
                '@Url.Action("Edit", "Home", new { id = Model.Id })')"
                class="btn btn-primary mx-2">
            Edit
        </button>
    </div>
</div>
