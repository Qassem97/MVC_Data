@model PersonViewModel
@{
    ViewData["Title"] = "Home Index";


}

<h1>Home Index</h1>

<form method="post" id="addPersonForms">
    <input asp-for="Person.Name" placeholder="Name" />
    <input asp-for="Person.Number" placeholder="Phone" />
    <input asp-for="Person.City" placeholder="City" />
    <input type="submit" value="Add User" />
</form>

<form asp-controller="Home" asp-action="Index">
    <p>
        Title: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<div id="person_form"></div>

@await Html.PartialAsync("_People", Model.People)




